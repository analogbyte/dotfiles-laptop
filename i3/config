# bar
bindsym $mod+period bar mode toggle
bar {
    output eDP1
    status_command SCRIPT_DIR=/usr/libexec/i3blocks i3blocks -c ~/.i3/i3blocks.conf
#python ~/.i3/i3status.py
    position top
    colors {
        background #073642
        statusline #eee8d5
        focused_workspace #cb4b16 #cb4b16 #eee8d5
        active_workspace #cb4b16 #cb4b16 #eee8d5
        inactive_workspace #b58900 #b58900 #eee8d5
        urgent_workspace #859900 #859900 #eee8d5
    }
}
bar {
    output VGA1
    output DP1
    output DP2
    output DP2-1
    output DP2-2
    output DP2-3
    position top
    tray_output none
    colors {
        background #073642
        statusline #eee8d5
        focused_workspace #cb4b16 #cb4b16 #eee8d5
        active_workspace #cb4b16 #cb4b16 #eee8d5
        inactive_workspace #b58900 #b58900 #eee8d5
        urgent_workspace #859900 #859900 #eee8d5
    }
}

